-- // üçé iPadOS "ProMotion" UI Library
-- // High Fidelity | Split View | Native Animations

local TweenService = game:GetService("TweenService")
local UserInputService = game:GetService("UserInputService")
local RunService = game:GetService("RunService")
local Players = game:GetService("Players")
local CoreGui = game:GetService("CoreGui")
local Mouse = Players.LocalPlayer:GetMouse()

-- // UTILITIES //
local function Tween(obj, info, props)
    local t = TweenService:Create(obj, info, props)
    t:Play()
    return t
end

local function GetIcon(name)
    -- Simple mapping for some Apple-style icons (using RBX asset IDs)
    local icons = {
        Settings = "rbxassetid://6031280882",
        Home = "rbxassetid://6031068420",
        User = "rbxassetid://6031280882",
        List = "rbxassetid://6031068421",
        Search = "rbxassetid://6031154871"
    }
    return icons[name] or "rbxassetid://6031280882"
end

-- // THEME ENGINE (Dark Mode Default) //
local Library = {
    Flags = {},
    Theme = {
        -- Exact Colors from Apple Human Interface Guidelines (Dark Mode)
        Background = Color3.fromRGB(0, 0, 0),       -- Pure Black
        Sidebar = Color3.fromRGB(28, 28, 30),       -- SystemGray6
        ContentBG = Color3.fromRGB(0, 0, 0),        -- Content Background
        Cell = Color3.fromRGB(28, 28, 30),          -- SystemGray6 (The "Card" color)
        CellPress = Color3.fromRGB(44, 44, 46),     -- SystemGray5
        Text = Color3.fromRGB(255, 255, 255),
        SubText = Color3.fromRGB(142, 142, 147),    -- SystemGray
        Accent = Color3.fromRGB(10, 132, 255),      -- SystemBlue
        Success = Color3.fromRGB(48, 209, 88),      -- SystemGreen
        Destructive = Color3.fromRGB(255, 69, 58),  -- SystemRed
        Divider = Color3.fromRGB(56, 56, 58),       -- Separator Line
        Stroke = Color3.fromRGB(40, 40, 40)
    }
}

-- // DRAGGABLE LOGIC //
local function MakeDraggable(trigger, object)
    local Dragging, DragInput, DragStart, StartPos
    
    trigger.InputBegan:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseButton1 then
            Dragging = true
            DragStart = input.Position
            StartPos = object.Position
            
            -- "Lift" Animation
            Tween(object, TweenInfo.new(0.3, Enum.EasingStyle.Quint), {
                Size = UDim2.new(0, 760, 0, 490), -- Slight Scale Up
                Rotation = 0
            })
            
            input.Changed:Connect(function()
                if input.UserInputState == Enum.UserInputState.End then
                    Dragging = false
                    -- "Drop" Animation
                    Tween(object, TweenInfo.new(0.3, Enum.EasingStyle.Quint), {
                        Size = UDim2.new(0, 750, 0, 480),
                        Rotation = 0
                    })
                end
            end)
        end
    end)

    trigger.InputChanged:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseMovement then DragInput = input end
    end)

    UserInputService.InputChanged:Connect(function(input)
        if input == DragInput and Dragging then
            local Delta = input.Position - DragStart
            -- Smooth Drag
            local TargetPos = UDim2.new(StartPos.X.Scale, StartPos.X.Offset + Delta.X, StartPos.Y.Scale, StartPos.Y.Offset + Delta.Y)
            object.Position = TargetPos
        end
    end)
end

-- // WINDOW CREATION //
function Library:CreateWindow(config)
    local Title = config.Title or "Settings"
    
    local ScreenGui = Instance.new("ScreenGui")
    ScreenGui.Name = "iOS_Library_" .. math.random(1000,9999)
    ScreenGui.IgnoreGuiInset = true
    ScreenGui.ResetOnSpawn = false
    
    -- Safe Parent
    local Success, _ = pcall(function() ScreenGui.Parent = CoreGui end)
    if not Success then ScreenGui.Parent = Players.LocalPlayer:WaitForChild("PlayerGui") end

    -- Main Container (CanvasGroup for global fade effects)
    local Main = Instance.new("CanvasGroup")
    Main.Size = UDim2.new(0, 750, 0, 480)
    Main.Position = UDim2.new(0.5, -375, 0.5, -240)
    Main.BackgroundColor3 = Library.Theme.Background
    Main.BorderSizePixel = 0
    Main.GroupTransparency = 1
    Main.Parent = ScreenGui

    Instance.new("UICorner", Main).CornerRadius = UDim.new(0, 14) -- iOS Corner Radius
    
    -- Stroke (Subtle border)
    local MainStroke = Instance.new("UIStroke", Main)
    MainStroke.Color = Library.Theme.Stroke
    MainStroke.Thickness = 1
    MainStroke.Transparency = 0.5

    -- Opening Animation
    Tween(Main, TweenInfo.new(0.6, Enum.EasingStyle.Quint), {GroupTransparency = 0, Size = UDim2.new(0, 750, 0, 480)})

    -- // SIDEBAR (Left) //
    local Sidebar = Instance.new("Frame", Main)
    Sidebar.Size = UDim2.new(0, 240, 1, 0)
    Sidebar.BackgroundColor3 = Library.Theme.Sidebar
    Sidebar.BorderSizePixel = 0
    
    -- Sidebar Separator
    local Sep = Instance.new("Frame", Sidebar)
    Sep.Size = UDim2.new(0, 1, 1, 0); Sep.Position = UDim2.new(1, -1, 0, 0)
    Sep.BackgroundColor3 = Library.Theme.Divider; Sep.BorderSizePixel = 0
    
    -- Sidebar Header
    local HeaderTitle = Instance.new("TextLabel", Sidebar)
    HeaderTitle.Text = Title
    HeaderTitle.Size = UDim2.new(1, -40, 0, 60); HeaderTitle.Position = UDim2.new(0, 20, 0, 10)
    HeaderTitle.Font = Enum.Font.GothamBold; HeaderTitle.TextSize = 28
    HeaderTitle.TextColor3 = Library.Theme.Text; HeaderTitle.TextXAlignment = Enum.TextXAlignment.Left
    HeaderTitle.BackgroundTransparency = 1

    -- Search Bar (Visual Only)
    local SearchBG = Instance.new("Frame", Sidebar)
    SearchBG.Size = UDim2.new(1, -30, 0, 34); SearchBG.Position = UDim2.new(0, 15, 0, 70)
    SearchBG.BackgroundColor3 = Color3.fromRGB(118, 118, 128); SearchBG.BackgroundTransparency = 0.76
    Instance.new("UICorner", SearchBG).CornerRadius = UDim.new(0, 10)
    
    local SearchIcon = Instance.new("ImageLabel", SearchBG)
    SearchIcon.Size = UDim2.new(0, 14, 0, 14); SearchIcon.Position = UDim2.new(0, 10, 0.5, -7)
    SearchIcon.Image = GetIcon("Search"); SearchIcon.ImageColor3 = Library.Theme.SubText
    SearchIcon.BackgroundTransparency = 1
    
    local SearchText = Instance.new("TextLabel", SearchBG)
    SearchText.Text = "Search"; SearchText.Size = UDim2.new(1, -35, 1, 0); SearchText.Position = UDim2.new(0, 30, 0, 0)
    SearchText.TextColor3 = Library.Theme.SubText; SearchText.Font = Enum.Font.Gotham; SearchText.TextSize = 16
    SearchText.BackgroundTransparency = 1; SearchText.TextXAlignment = Enum.TextXAlignment.Left

    -- Tab Container
    local TabScroll = Instance.new("ScrollingFrame", Sidebar)
    TabScroll.Size = UDim2.new(1, 0, 1, -120); TabScroll.Position = UDim2.new(0, 0, 0, 120)
    TabScroll.BackgroundTransparency = 1; TabScroll.ScrollBarThickness = 0
    local TabList = Instance.new("UIListLayout", TabScroll); TabList.Padding = UDim.new(0, 2)

    -- // CONTENT (Right) //
    local Content = Instance.new("Frame", Main)
    Content.Size = UDim2.new(1, -240, 1, 0); Content.Position = UDim2.new(0, 240, 0, 0)
    Content.BackgroundColor3 = Library.Theme.ContentBG
    Content.BorderSizePixel = 0
    
    -- Enable Dragging on Sidebar
    MakeDraggable(Sidebar, Main)

    local Window = {}
    local CurrentTab = nil

    function Window:AddTab(name)
        -- Tab Button
        local TabBtn = Instance.new("TextButton", TabScroll)
        TabBtn.Size = UDim2.new(1, -20, 0, 40); TabBtn.Position = UDim2.new(0, 10, 0, 0)
        TabBtn.BackgroundTransparency = 1; TabBtn.Text = ""
        TabBtn.AutoButtonColor = false
        
        Instance.new("UICorner", TabBtn).CornerRadius = UDim.new(0, 8)
        
        local TabLabel = Instance.new("TextLabel", TabBtn)
        TabLabel.Text = name; TabLabel.Size = UDim2.new(1, -10, 1, 0); TabLabel.Position = UDim2.new(0, 10, 0, 0)
        TabLabel.TextColor3 = Library.Theme.Text; TabLabel.Font = Enum.Font.GothamMedium; TabLabel.TextSize = 15
        TabLabel.BackgroundTransparency = 1; TabLabel.TextXAlignment = Enum.TextXAlignment.Left

        -- Content Page
        local Page = Instance.new("ScrollingFrame", Content)
        Page.Size = UDim2.new(1, 0, 1, 0); Page.BackgroundTransparency = 1
        Page.Visible = false; Page.ScrollBarThickness = 3; Page.ScrollBarImageColor3 = Library.Theme.SubText
        
        local PageList = Instance.new("UIListLayout", Page)
        PageList.Padding = UDim.new(0, 12); PageList.HorizontalAlignment = Enum.HorizontalAlignment.Center
        
        -- Top Padding
        local Pad = Instance.new("Frame", Page); Pad.Size = UDim2.new(1, 0, 0, 20); Pad.BackgroundTransparency = 1

        PageList:GetPropertyChangedSignal("AbsoluteContentSize"):Connect(function()
            Page.CanvasSize = UDim2.new(0, 0, 0, PageList.AbsoluteContentSize.Y + 40)
        end)

        -- Tab Selection Logic
        local function OpenTab()
            if CurrentTab == TabBtn then return end
            
            -- Reset Old
            for _, btn in pairs(TabScroll:GetChildren()) do
                if btn:IsA("TextButton") then
                    Tween(btn, TweenInfo.new(0.3), {BackgroundTransparency = 1})
                end
            end
            for _, p in pairs(Content:GetChildren()) do if p:IsA("ScrollingFrame") then p.Visible = false end end

            -- Set New
            CurrentTab = TabBtn
            Page.Visible = true
            Tween(TabBtn, TweenInfo.new(0.3), {BackgroundTransparency = 0.85, BackgroundColor3 = Library.Theme.Accent})
            
            -- Slide In Effect
            Page.CanvasPosition = Vector2.new(0, 20)
            Tween(Page, TweenInfo.new(0.4, Enum.EasingStyle.Quint), {CanvasPosition = Vector2.new(0, 0)})
        end

        TabBtn.MouseButton1Click:Connect(OpenTab)
        if CurrentTab == nil then OpenTab() end -- Auto open first

        -- // COMPONENTS //
        local TabFunctions = {}

        -- SECTIONS (Grouped Headers)
        function TabFunctions:AddSection(text)
            local S = Instance.new("TextLabel", Page)
            S.Size = UDim2.new(0.9, 0, 0, 30)
            S.Text = string.upper(text)
            S.TextColor3 = Library.Theme.SubText
            S.Font = Enum.Font.GothamMedium; S.TextSize = 12
            S.BackgroundTransparency = 1; S.TextXAlignment = Enum.TextXAlignment.Left
            S.TextYAlignment = Enum.TextYAlignment.Bottom
        end

        -- Helper to create rounded "Cells"
        local function CreateCell()
            local Cell = Instance.new("Frame", Page)
            Cell.Size = UDim2.new(0.9, 0, 0, 48)
            Cell.BackgroundColor3 = Library.Theme.Cell
            Instance.new("UICorner", Cell).CornerRadius = UDim.new(0, 10)
            return Cell
        end

        -- BUTTON
        function TabFunctions:AddButton(title, callback)
            local Cell = CreateCell()
            
            local Btn = Instance.new("TextButton", Cell)
            Btn.Size = UDim2.new(1, 0, 1, 0); Btn.BackgroundTransparency = 1
            Btn.Text = title; Btn.TextColor3 = Library.Theme.Accent
            Btn.Font = Enum.Font.Gotham; Btn.TextSize = 16
            
            Btn.MouseButton1Down:Connect(function()
                Tween(Cell, TweenInfo.new(0.1), {BackgroundColor3 = Library.Theme.CellPress})
            end)
            
            Btn.MouseButton1Up:Connect(function()
                Tween(Cell, TweenInfo.new(0.3), {BackgroundColor3 = Library.Theme.Cell})
                pcall(callback)
            end)
            
            Btn.MouseLeave:Connect(function()
                Tween(Cell, TweenInfo.new(0.3), {BackgroundColor3 = Library.Theme.Cell})
            end)
        end

        -- TOGGLE (Modern iOS Switch)
        function TabFunctions:AddToggle(title, desc, flag, default, callback)
            Library.Flags[flag] = default or false
            local Cell = CreateCell()

            local T = Instance.new("TextLabel", Cell)
            T.Text = title; T.Size = UDim2.new(1, -70, 1, 0); T.Position = UDim2.new(0, 15, 0, 0)
            T.TextColor3 = Library.Theme.Text; T.Font = Enum.Font.Gotham; T.TextSize = 16
            T.BackgroundTransparency = 1; T.TextXAlignment = Enum.TextXAlignment.Left
            
            local SwitchBG = Instance.new("Frame", Cell)
            SwitchBG.Size = UDim2.new(0, 50, 0, 30); SwitchBG.Position = UDim2.new(1, -65, 0.5, -15)
            SwitchBG.BackgroundColor3 = Library.Flags[flag] and Library.Theme.Success or Color3.fromRGB(58, 58, 60)
            Instance.new("UICorner", SwitchBG).CornerRadius = UDim.new(1, 0)
            
            local Knob = Instance.new("Frame", SwitchBG)
            Knob.Size = UDim2.new(0, 26, 0, 26)
            Knob.Position = Library.Flags[flag] and UDim2.new(1, -28, 0.5, -13) or UDim2.new(0, 2, 0.5, -13)
            Knob.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
            Instance.new("UICorner", Knob).CornerRadius = UDim.new(1, 0)

            local Trigger = Instance.new("TextButton", Cell)
            Trigger.Size = UDim2.new(1, 0, 1, 0); Trigger.BackgroundTransparency = 1; Trigger.Text = ""
            
            Trigger.MouseButton1Click:Connect(function()
                Library.Flags[flag] = not Library.Flags[flag]
                local State = Library.Flags[flag]
                
                -- Animate
                Tween(SwitchBG, TweenInfo.new(0.3, Enum.EasingStyle.Quint), {
                    BackgroundColor3 = State and Library.Theme.Success or Color3.fromRGB(58, 58, 60)
                })
                Tween(Knob, TweenInfo.new(0.3, Enum.EasingStyle.Quint), {
                    Position = State and UDim2.new(1, -28, 0.5, -13) or UDim2.new(0, 2, 0.5, -13)
                })
                
                if callback then callback(State) end
            end)
        end

        -- SLIDER
        function TabFunctions:AddSlider(title, flag, min, max, default, callback)
            Library.Flags[flag] = default or min
            local Cell = CreateCell()
            Cell.Size = UDim2.new(0.9, 0, 0, 65)

            local T = Instance.new("TextLabel", Cell)
            T.Text = title; T.Position = UDim2.new(0, 15, 0, 10)
            T.TextColor3 = Library.Theme.Text; T.Font = Enum.Font.Gotham; T.TextSize = 16
            T.BackgroundTransparency = 1; T.TextXAlignment = Enum.TextXAlignment.Left

            local ValueText = Instance.new("TextLabel", Cell)
            ValueText.Text = tostring(default); ValueText.Position = UDim2.new(1, -50, 0, 10)
            ValueText.TextColor3 = Library.Theme.SubText; ValueText.Font = Enum.Font.Gotham; ValueText.TextSize = 15
            ValueText.BackgroundTransparency = 1

            local Track = Instance.new("Frame", Cell)
            Track.Size = UDim2.new(1, -30, 0, 4); Track.Position = UDim2.new(0, 15, 0, 45)
            Track.BackgroundColor3 = Color3.fromRGB(60, 60, 60); Instance.new("UICorner", Track)

            local Fill = Instance.new("Frame", Track)
            Fill.Size = UDim2.new((default - min)/(max - min), 0, 1, 0)
            Fill.BackgroundColor3 = Library.Theme.Accent; Instance.new("UICorner", Fill)
            
            local Knob = Instance.new("Frame", Fill)
            Knob.Size = UDim2.new(0, 22, 0, 22); Knob.Position = UDim2.new(1, -11, 0.5, -11)
            Knob.BackgroundColor3 = Color3.fromRGB(255, 255, 255); Instance.new("UICorner", Knob).CornerRadius = UDim.new(1, 0)
            
            local SliderBtn = Instance.new("TextButton", Cell)
            SliderBtn.Size = UDim2.new(1, 0, 0, 30); SliderBtn.Position = UDim2.new(0, 0, 0, 35)
            SliderBtn.BackgroundTransparency = 1; SliderBtn.Text = ""

            local Dragging = false
            
            local function Update(input)
                local pos = math.clamp((input.Position.X - Track.AbsolutePosition.X) / Track.AbsoluteSize.X, 0, 1)
                local val = math.floor(min + ((max - min) * pos))
                Library.Flags[flag] = val
                ValueText.Text = tostring(val)
                Fill.Size = UDim2.new(pos, 0, 1, 0)
                if callback then callback(val) end
            end

            SliderBtn.InputBegan:Connect(function(input)
                if input.UserInputType == Enum.UserInputType.MouseButton1 then
                    Dragging = true
                    Tween(Knob, TweenInfo.new(0.1), {Size = UDim2.new(0, 28, 0, 28), Position = UDim2.new(1, -14, 0.5, -14)}) -- Grow
                    Update(input)
                end
            end)
            
            UserInputService.InputEnded:Connect(function(input)
                if input.UserInputType == Enum.UserInputType.MouseButton1 then
                    Dragging = false
                    Tween(Knob, TweenInfo.new(0.2), {Size = UDim2.new(0, 22, 0, 22), Position = UDim2.new(1, -11, 0.5, -11)}) -- Shrink
                end
            end)

            UserInputService.InputChanged:Connect(function(input)
                if Dragging and input.UserInputType == Enum.UserInputType.MouseMovement then Update(input) end
            end)
        end

        return TabFunctions
    end

    -- // NOTIFICATION //
    function Window:Notify(title, desc)
        local Notif = Instance.new("Frame", ScreenGui)
        Notif.Size = UDim2.new(0, 300, 0, 70); Notif.Position = UDim2.new(0.5, -150, 0, -100)
        Notif.BackgroundColor3 = Library.Theme.Cell
        Instance.new("UICorner", Notif).CornerRadius = UDim.new(0, 14)
        
        -- Icon
        local I = Instance.new("ImageLabel", Notif)
        I.Size = UDim2.new(0, 30, 0, 30); I.Position = UDim2.new(0, 15, 0.5, -15)
        I.BackgroundColor3 = Library.Theme.Accent; Instance.new("UICorner", I).CornerRadius = UDim.new(0, 8)
        
        local T = Instance.new("TextLabel", Notif)
        T.Text = title; T.Position = UDim2.new(0, 60, 0, 15); T.TextColor3 = Library.Theme.Text
        T.Font = Enum.Font.GothamBold; T.TextSize = 14; T.BackgroundTransparency = 1; T.TextXAlignment = Enum.TextXAlignment.Left

        local D = Instance.new("TextLabel", Notif)
        D.Text = desc; D.Position = UDim2.new(0, 60, 0, 35); D.TextColor3 = Library.Theme.SubText
        D.Font = Enum.Font.Gotham; D.TextSize = 12; D.BackgroundTransparency = 1; D.TextXAlignment = Enum.TextXAlignment.Left

        -- Animate In
        Tween(Notif, TweenInfo.new(0.5, Enum.EasingStyle.Quint), {Position = UDim2.new(0.5, -150, 0, 40)})
        task.wait(2.5)
        -- Animate Out
        Tween(Notif, TweenInfo.new(0.5, Enum.EasingStyle.Back, Enum.EasingDirection.In), {Position = UDim2.new(0.5, -150, 0, -120)})
        task.wait(0.6)
        Notif:Destroy()
    end

    return Window
end

return Library
